<h1>Les Documents de la base de données (<%= @documents.count%>)</h1>
<!--pour afficher le nombre de cours enregistrés -->

<div class="jumbotron">
	<div class="row">
	<% for document in @documents %>
		<div class="col-sm-6 col-md-4">
    		<div class="thumbnail">
    		  <%= image_tag document.image.url(:thumb), alt: document.title%>
    			<div class="caption">
    			    <h3><%= document.title%></h3>
    			    <p><%= document.description%></p>
    			    <p><a href="#" class="btn btn-primary" role="button">Description</a> <a href="#" class="btn btn-default" role="button">Visualisation</a></p>
    			</div>
    		</div>
  		</div>
	
<% end %>
	</div>
</div> <!-- conserver cette div pour entourer les docs de la class jumbotron -->