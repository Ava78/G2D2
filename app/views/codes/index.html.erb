<div class="jumbotron">
	<div class="row">
	<% for code in @codes %>
		<div class="col-sm-4 col-md-3">
    		<div class="thumbnail">
    		  	<div class="caption">
    			    <h3><%= code.client%></h3>
    			    <p><%= code.environnement%></p>
                    <p><%= code.domaine%></p>
                    <p><%= code.categorie%></p>
                    <p><%= code.statut%></p>
                    


    			    <p><%= link_to "Voir les documents", documents_path%></p>

                </div>
    		</div>
  		</div>
	
<% end %>
	</div>
</div> <!-- conserver cette div pour entourer les docs de la class jumbotron -->